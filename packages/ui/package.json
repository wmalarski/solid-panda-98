{
	"name": "@sp98/ui",
	"version": "0.1.2",
	"license": "MIT",
	"sideEffects": false,
	"source": "src/index.tsx",
	"main": "dist/index/index.common.js",
	"module": "dist/index/index.module.js",
	"types": "dist/index/index.d.ts",
	"files": ["dist"],
	"exports": {
		"./styles.css": "./dist/styles.css",
		".": {
			"solid": "./dist/index/index.jsx",
			"import": "./dist/index/index.module.js",
			"browser": "./dist/index/index.module.js",
			"require": "./dist/index/index.common.js",
			"node": "./dist/index/index.common.js",
			"types": "./src/index.tsx"
		}
	},
	"scripts": {
		"build": "rollup --config rollup.config.mjs",
		"dev": "rollup --config rollup.config.mjs --watch",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"types": "tsc --noEmit",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.10",
		"@sp98/typescript-config": "workspace: *",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/user-event": "14.5.2",
		"@vitest/coverage-v8": "^2.1.4",
		"jsdom": "^25.0.1",
		"rollup": "4.24.4",
		"rollup-plugin-postcss": "4.0.2",
		"rollup-plugin-visualizer": "5.12.0",
		"rollup-preset-solid": "2.0.1",
		"typescript": "^5.6.3",
		"vite-plugin-solid": "2.10.2",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@corvu/drawer": "^0.2.2",
		"@kobalte/core": "^0.13.7",
		"solid-js": "^1.9.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
