{
	"name": "@sp98/ui",
	"version": "0.1.2",
	"license": "MIT",
	"sideEffects": false,
	"source": "src/index.tsx",
	"main": "./dist/index/index.js",
	"module": "./dist/index/index.js",
	"types": "./dist/index/index.d.ts",
	"files": ["dist"],
	"browser": {},
	"typesVersions": {
		"*": {
			"preset": ["./dist/preset/index.d.ts"]
		}
	},
	"type": "module",
	"exports": {
		".": {
			"solid": "./dist/index/index.jsx",
			"import": {
				"types": "./dist/index/index.d.ts",
				"default": "./dist/index/index.js"
			}
		},
		"./preset": {
			"import": {
				"types": "./dist/preset/index.d.ts",
				"default": "./dist/preset/index.js"
			}
		}
	},
	"scripts": {
		"prepare": "pnpm panda codegen",
		"cssgen": "pnpm panda cssgen -o dist/lib.css",
		"build": "tsup",
		"build-fast": "tsup --no-dts",
		"dev": "pnpm build-fast --watch",
		"ship": "pnpm panda ship -o dist/panda.buildinfo.json",
		"postbuild": "pnpm ship",
		"release": "pnpm panda prepare && pnpm build && pnpm ship && pnpm publish",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"types": "tsc --noEmit",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"devDependencies": {
		"@pandacss/dev": "^0.48.0",
		"@pandacss/preset-panda": "^0.48.0",
		"@pandacss/types": "^0.48.0",
		"@solidjs/testing-library": "0.8.10",
		"@sp98/typescript-config": "workspace: *",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/user-event": "14.5.2",
		"@vitest/coverage-v8": "^2.1.5",
		"esbuild": "^0.24.0",
		"esbuild-plugin-solid": "^0.6.0",
		"jsdom": "^25.0.1",
		"tsup": "^8.3.5",
		"tsup-preset-solid": "^2.2.0",
		"typescript": "^5.6.3",
		"vite-plugin-solid": "2.10.2",
		"vitest": "^2.1.5"
	},
	"dependencies": {
		"@sp98/styled-system": "workspace: *",
		"@ark-ui/solid": "^4.5.0",
		"solid-js": "^1.9.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
